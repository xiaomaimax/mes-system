{
  "name": "maxmes",
  "version": "1.1.0",
  "description": "现代化制造执行系统 - 集成生产管理、质量控制、设备维护等核心功能",
  "main": "server/app.js",
  "homepage": "https://github.com/xiaomaimax/maxmes#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaomaimax/maxmes.git"
  },
  "bugs": {
    "url": "https://github.com/xiaomaimax/maxmes/issues"
  },
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "server": "nodemon server/app.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup": "node scripts/setup.js",
    "setup-db": "node scripts/create-database.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cascade": "jest server/services/CascadeDeleteService.test.js",
    "test:properties": "node scripts/run-property-tests.js",
    "test:properties:verbose": "node scripts/run-property-tests.js --verbose",
    "test:properties:coverage": "node scripts/run-property-tests.js --coverage",
    "test:properties:watch": "node scripts/run-property-tests.js --watch",
    "test:employee:persistence": "node scripts/test-employee-persistence.js",
    "test:employee:data-flow": "node scripts/test-employee-data-flow.js",
    "verify:data": "node scripts/verify-data-consistency.js",
    "verify:buttons": "node scripts/realistic-button-verification.js",
    "verify:buttons:verbose": "node scripts/realistic-button-verification.js --verbose",
    "verify:system": "npm run verify:data && npm run verify:buttons",
    "verify:auto": "node scripts/setup-automated-verification.js",
    "verify:auto:quick": "node scripts/setup-automated-verification.js --quick",
    "verify:auto:full": "node scripts/setup-automated-verification.js --full",
    "verify:auto:stage1": "node scripts/setup-automated-verification.js --stage=1",
    "verify:auto:stage2": "node scripts/setup-automated-verification.js --stage=2",
    "verify:simple": "node scripts/simple-verification.js",
    "verify:simple:stage1": "node scripts/simple-verification.js --stage=1",
    "verify:simple:stage2": "node scripts/simple-verification.js --stage=2",
    "verify:simple:stage3": "node scripts/simple-verification.js --stage=3",
    "verify:simple:stage4": "node scripts/simple-verification.js --stage=4",
    "repair:data": "node scripts/repair-data-consistency.js",
    "test:process": "node scripts/test-process-master-data.js",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-fetch": "^3.3.2",
    "sequelize": "^6.32.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "MES",
    "制造执行系统",
    "Manufacturing Execution System",
    "生产管理",
    "质量管理",
    "设备管理",
    "库存管理",
    "React",
    "Node.js",
    "MySQL",
    "工业4.0",
    "数字化工厂",
    "智能制造"
  ],
  "author": {
    "name": "xiaomaimax",
    "email": "10044750@qq.com"
  },
  "contributors": [
    {
      "name": "xiaomaimax",
      "email": "10044750@qq.com"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
